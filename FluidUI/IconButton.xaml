<UserControl x:Class="FluidUI.IconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FluidUI"
             mc:Ignorable="d" 
             d:DesignHeight="28" d:DesignWidth="28" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave">
    <Grid MouseUp="button_MouseUp">
        <Canvas x:Name="imgCanvas" HorizontalAlignment="Center" VerticalAlignment="Center" Width="24" Height="24" MouseUp="button_MouseUp"/>

    </Grid>
</UserControl>
